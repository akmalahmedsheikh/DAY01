#include<stdio.h>

int main()
{
   int productcount,i;
   int weights;
   printf("enter the number of product\n");
   scanf("%d",&productcount);
   int acceptedcount=0;
   int rejectedcount=0;
   for(i=1;i<=productcount;i++)
   {
    printf("enter the weights of product(in gram:)");
    scanf("%d",&weights);
   if((weights>=950)&&(weights<=1050))
   {
    acceptedcount++;
   }
   else
   {
    rejectedcount++;
   }
   }
   printf("accepted product:%d\n",acceptedcount);
   printf("rejected product:%d\n",rejectedcount);
    return 0;
}
